<html>

	<head>
		<title><% title "Sign In Page" %></title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" type="text/css" href="login.css">
		

	</head>

	<body>
		<div class="head1"> 
		</div>
		<div class="head2">
			<h1> Ruby on Rails Application Demo </h1>
		</div>
		<div class="formalign">
				
				<h2>Sign UP</h2>	
				
				<%= devise_error_messages1! %>
				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				    <%= f.input :email, placeholder: 'Email', input_html: { class: 'inp1' } %>
				    <% if @minimum_password_length %>
    					<em>(<%= @minimum_password_length %> characters minimum)</em>
				        <% end %><br />
				    <%= f.input :password, placeholder: 'Password',input_html: { minlength: 10, maxlength:15, class: 'inp1' }  %>
				    <%= f.input :password_confirmation, placeholder: 'password_confirmation',input_html: { minlength: 10, maxlength:15, class: 'inp1' }  %>
				    <div class="roles">
					<% for role in User::ROLES %>
 					<%= radio_button_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
 					<%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
					<% end %>
					<%= hidden_field_tag "user[roles][]", "" %>
				    </div>

				  <div class="butt">
				    <%= f.button :submit, "Sign Up" %>
				 </div>
				<% end %>
				
			
			
		</div>
	</body>

</html>















